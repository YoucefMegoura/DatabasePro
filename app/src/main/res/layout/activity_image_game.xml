<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dz.youcefmegoura.test.databasepro.Views.ImageGame">

    <Button
        android:id="@+id/speak_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak it"
        android:onClick="speakClick"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/score_text_view"
        android:text="Score"
        android:layout_above="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/nom_image_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="image_text"
        android:layout_below="@id/image_view"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="200dp"
        android:hint="new score"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/nom_image_textView"
        android:inputType="number"
        />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveClick"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_text"
        />
    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="nextClick"
        android:layout_alignBaseline="@id/save_btn"
        android:layout_toRightOf="@id/save_btn"
        />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="backClick"
        android:layout_alignBaseline="@id/save_btn"
        android:layout_toLeftOf="@id/save_btn"
        />

</RelativeLayout>
