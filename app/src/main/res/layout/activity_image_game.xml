<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dz.youcefmegoura.test.databasepro.Views.ImageGame">

    <TextView
        android:id="@+id/score_tout_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="22dp"
        android:text="score_categorie" />

    <TextView
        android:id="@+id/jetons_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/score_tout_categorie"
        android:layout_alignBottom="@+id/score_tout_categorie"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/image_view"
        android:text="jetons" />

    <Button
        android:id="@+id/speak_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_text_view"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/back_btn"
        android:onClick="speakClick"
        android:text="Speak it"
        android:visibility="visible" />

    <TextView
        android:id="@+id/score_text_view"
        android:text="Score"
        android:layout_above="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/nom_image_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="image_text"
        android:layout_below="@id/image_view"/>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:onClick="saveClick"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_view"
        android:layout_marginTop="80dp"
        />
    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="nextClick"
        android:layout_alignBaseline="@id/save_btn"
        android:layout_toRightOf="@id/save_btn"
        />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="backClick"
        android:layout_alignBaseline="@id/save_btn"
        android:layout_toLeftOf="@id/save_btn"
        />

</RelativeLayout>
