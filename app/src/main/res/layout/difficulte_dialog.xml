<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#f2f2f2"
        android:layout_alignParentTop="true"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#4dc0f7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir la difficultÃ©"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#f2f2f2"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radio_debutant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debutant"
                android:textColor="#706d6d"
                />

            <RadioButton
                android:id="@+id/radio_moyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moyen"
                android:textColor="#706d6d"
                />

            <RadioButton
                android:id="@+id/radio_expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert"
                android:textColor="#706d6d"
                />

        </RadioGroup>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="230dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/annulerDiff"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:text="Annuler"
                android:textColor="#f2f2f2"
                android:background="@drawable/niveau_shape"/>
            <Button
                android:id="@+id/validerDiff"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:text="Valider"
                android:textColor="#f2f2f2"
                android:background="@drawable/niveau_shape"/>
        </LinearLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>