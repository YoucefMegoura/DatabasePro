<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dz.youcefmegoura.test.databasepro.Views.MotDePasseOublie"
    android:background="@drawable/bg_inscr">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/back"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oubliè"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#f2f2f2"

            />
    </LinearLayout>


    <EditText
        android:id="@+id/email_ET"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/button_login"
        android:drawablePadding="1dp"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#818181"
        android:padding="8dp"


        />

    <Button
        android:id="@+id/se_connecter_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email_ET"
        android:background="@drawable/button_seconnecter"
        android:text="Renitialisé mot de passe"
        android:onClick="renitialise_mot_de_passe"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:textColor="#f2f2f2"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email_ET"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
