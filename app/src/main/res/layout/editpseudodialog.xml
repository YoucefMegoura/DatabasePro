<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#f2f2f2"
        android:layout_alignParentTop="true"

        >
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="50dp"
           app:cardCornerRadius="10dp"
           app:cardBackgroundColor="#4dc0f7"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Chager le pseudo"
               android:layout_gravity="center"
               android:textSize="20dp"
               android:textColor="#f2f2f2"
               android:textStyle="bold"/>
       </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <EditText
                android:id="@+id/entrer_pseudo"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:background="#ffffff"
                android:textColor="#8e8b8b"
                />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#4dc0f7"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/user"/>


            </RelativeLayout>



            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nochanger"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="60dp"
                    android:text="Annuler"
                    android:textColor="#f2f2f2"
                    android:background="@drawable/niveau_shape"/>
                <Button
                    android:id="@+id/changer"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:text="Valider"
                    android:textColor="#f2f2f2"
                    android:background="@drawable/niveau_shape"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>