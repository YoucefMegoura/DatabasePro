<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dz.youcefmegoura.test.databasepro.Views.Inscription">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:onClick="back_click"
        android:background="@drawable/ic_arrow_back_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/pseudo_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Pseudo"
        />


    <EditText
        android:id="@+id/email_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/pseudo_ET"
        android:hint="Email"
        />

    <EditText
        android:id="@+id/mot_de_passe_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_ET"
        android:hint="Mot de passe"
        />

    <EditText
        android:id="@+id/confirmer_mot_de_passe_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mot_de_passe_ET"
        android:hint="Confirmer mot de passe"
        />

    <EditText
        android:id="@+id/age_ET"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmer_mot_de_passe_ET"
        android:layout_centerHorizontal="true"
        android:hint="Age"
        />


    <Button
        android:id="@+id/se_connecter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_ET"
        android:text="Cree mon compte"
        android:onClick="cree_compte_click"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/se_connecter_google_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:layout_marginStart="23dp"
        android:onClick="se_connecter_google_click"
        android:text="Google" />

    <Button
        android:id="@+id/se_connecter_facebook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/se_connecter_google_btn"
        android:layout_alignBottom="@+id/se_connecter_google_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:onClick="se_connecter_facebook_click"
        android:text="facebook" />

</RelativeLayout>
