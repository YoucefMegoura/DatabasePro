<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="550dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#f2f2f2"
        android:layout_alignParentTop="true"

        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#4dc0f7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chager l'avatar"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#f2f2f2"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical">
     <LinearLayout

         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <ImageButton
             android:id="@+id/boyOne_btn"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:clickable="true"
             android:onClick="BoyOne"
            android:background="@drawable/boyone"/>
         <ImageButton
             android:id="@+id/girlOne_btn"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:onClick="GirlOne"
             android:clickable="true"
             android:background="@drawable/girlone"/>
     </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="Boytwo"
            android:clickable="true"
            android:background="@drawable/boytwo"/>
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:clickable="true"
            android:onClick="girltwo"
            android:background="@drawable/girltwo"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:clickable="true"
            android:onClick="boythree"
            android:background="@drawable/boythree"/>
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="girlthree"
            android:clickable="true"
            android:background="@drawable/girlthree"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
                <Button
                    android:id="@+id/annuler"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:text="Annuler"
                    android:textColor="#f2f2f2"
                    android:background="@drawable/niveau_shape"/>
                <Button
                    android:id="@+id/valider"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:text="Valider"
                    android:textColor="#f2f2f2"
                    android:background="@drawable/niveau_shape"/>
            </LinearLayout>
</LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>